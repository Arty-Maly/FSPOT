

<!-- Navigation -->
<% if(flash.present?) %>
  <NAV class="navbar navbar-default navbar-custom navbar-fixed-top">
    <DIV class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <DIV class="navbar-header page-scroll">
	<SPAN class="navbar-brand">
	  <% flash.each do |msg| %>
	    <DIV class="<%= msg[0] %>">
	      <%= msg[1] %>
	    </DIV>
	  <% end %>
	</SPAN>
      </DIV>
    </DIV>
    <!-- /.container -->
  </NAV>
<% end %>

<!-- Page Header -->
<%= render 'main_page/header' %>

<!-- Main Content -->
<% if(logged_in?) %>
  <%= link_to "Log Out", log_out_path, class: "btn btn-default btn-lg" %>
<% else %>
  <DIV class="container">
    <DIV class="login">
      <%= form_tag log_in_path do%>
	  <% label_tag :email %>
	  <%= text_field_tag :email, nil, class: "form-control", placeholder: "email" %>
	<BR />
	  <% label_tag :password %>
	  <%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>

	  <DIV class="checkbox">
            <LABEL>
              <INPUT type="checkbox" value="remember-me"> Remember me
            </LABEL>
          </DIV>

	  <%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %>
	  <A href="/users/new" type="button" class="btn btn-lg btn-primary btn-block">
	    Sign Up
	  </A>
      <% end %>
    </DIV>
  </DIV>
<% end %>

<HR>

